version: '3.7'
services:
  wp:
    depends_on:
      - db
    build: .
    ports:
      - <%= port %>:80
      - <%= sslPort %>:443
    <% if (volumes) { %>volumes: <% volumes.forEach((volume) => { %>
      - <%= volume %> <% }); } %>
  db:
    image: mariadb
    environment:
      MYSQL_ALLOW_EMPTY_PASSWORD: 'yes'
      MYSQL_DATABASE: 'wordpress'
    ports:
      - <%= dbPort %>:3306
    volumes:
      - db:/var/lib/mysql
volumes:
  db: {}
