version: '3.7'
services:
  wp:
    depends_on:
      - db
    build: .
    environment:
      CYPRESS_TEST: 1 <% Object.entries( env ).forEach(([n,v]) => { %>
      <%= n %> : <%= v %> <% }); %>
    ports:
      - <%= port %>:80
    <% if (volumes) { %>volumes: <% volumes.forEach((volume) => { %>
      - <%= volume %> <% }); } %>
  db:
    image: mariadb
    environment:
      MYSQL_ALLOW_EMPTY_PASSWORD: 'yes'
      MYSQL_DATABASE: 'wordpress'
    ports:
      - <%= dbPort %>:3306
    volumes:
      - db:/var/lib/mysql
volumes:
  db: {}
